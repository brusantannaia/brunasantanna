    <script>
        // Dados integrados diretamente para evitar erro de arquivo externo
        const promptsData = {
            "1": {
                category: "Contexto Rico",
                title: "Contexto Completo",
                description: "Use este prompt ANTES de qualquer pedido importante.",
                prompt: "Antes de voc√™ criar qualquer coisa pra mim, preciso que voc√™ entenda meu contexto completo..."
            },
            "5": {
                category: "Contexto Rico",
                title: "Deixe a IA te Entrevistar",
                description: "Inverta o jogo: deixe a IA fazer as perguntas certas.",
                prompt: "Eu tenho um projeto, mas n√£o sei por onde come√ßar. Em vez de eu explicar, me entreviste..."
            }
            // Adicione os outros aqui seguindo o mesmo padr√£o se desejar completar a lista
        };

        const gateForm = document.getElementById('gateForm');
        const modalOverlay = document.getElementById('modalOverlay');
        const modal = document.getElementById('modal');
        const modalClose = document.getElementById('modalClose');
        const copyBtn = document.getElementById('copyBtn');
        const promptCards = document.querySelectorAll('.prompt-card');
        let currentPromptId = null;

        // Form Submission
        gateForm.addEventListener('submit', (e) => {
            e.preventDefault();
            localStorage.setItem('biblioteca_unlocked', 'true');
            document.getElementById('library').scrollIntoView({ behavior: 'smooth' });
        });

        // Open Modal
        promptCards.forEach(card => {
            card.addEventListener('click', () => {
                const id = card.dataset.prompt;
                const data = promptsData[id];
                if (data) {
                    currentPromptId = id;
                    document.getElementById('modalCategory').textContent = data.category;
                    document.getElementById('modalTitle').textContent = data.title;
                    document.getElementById('modalDescription').textContent = data.description;
                    document.getElementById('modalPrompt').textContent = data.prompt;
                    modalOverlay.classList.add('active');
                    modal.classList.add('active');
                    document.body.style.overflow = 'hidden';
                }
            });
        });

        // Close Modal
        const closeModal = () => {
            modalOverlay.classList.remove('active');
            modal.classList.remove('active');
            document.body.style.overflow = '';
        };

        modalClose.addEventListener('click', closeModal);
        modalOverlay.addEventListener('click', closeModal);

        // Copy Function
        copyBtn.addEventListener('click', async () => {
            const text = promptsData[currentPromptId].prompt;
            await navigator.clipboard.writeText(text);
            copyBtn.textContent = 'Copiado!';
            setTimeout(() => copyBtn.textContent = 'Copiar Prompt', 2000);
        });
    </script>
</body>
