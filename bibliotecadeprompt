        var email = emailInput.value;
        
        localStorage.setItem('biblioteca_email', email);
        localStorage.setItem('biblioteca_unlocked', 'true');
        
        document.getElementById('library').scrollIntoView({ behavior: 'smooth' });
        
        var btn = gateForm.querySelector('.submit-btn');
        btn.textContent = 'Acesso Liberado!';
        btn.style.background = '#7D8B7A';
        
        setTimeout(function() {
            btn.textContent = 'Quero os Prompts';
            btn.style.background = '';
        }, 2000);
    });

    // ===== CATEGORY FILTER =====
    categoryBtns.forEach(function(btn) {
        btn.addEventListener('click', function() {
            categoryBtns.forEach(function(b) { b.classList.remove('active'); });
            btn.classList.add('active');

            var category = btn.dataset.category;

            if (category === 'all') {
                categorySections.forEach(function(section) { section.style.display = 'block'; });
            } else {
                categorySections.forEach(function(section) {
                    section.style.display = section.dataset.category === category ? 'block' : 'none';
                });
            }
        });
    });

    // ===== MODAL =====
    promptCards.forEach(function(card) {
        card.addEventListener('click', function() {
            var promptId = card.dataset.prompt;
            var data = promptsData[promptId];

            if (data) {
                currentPromptId = promptId;
                modalCategory.textContent = data.category;
                modalTitle.textContent = data.title;
                modalDescription.textContent = data.description;
                modalPrompt.textContent = data.prompt;

                modalOverlay.classList.add('active');
                modal.classList.add('active');
                document.body.style.overflow = 'hidden';
            }
        });
    });

    function closeModal() {
        modalOverlay.classList.remove('active');
        modal.classList.remove('active');
        document.body.style.overflow = '';
        copyBtn.textContent = 'Copiar Prompt';
        copyBtn.classList.remove('copied');
    }

    modalClose.addEventListener('click', closeModal);
    modalOverlay.addEventListener('click', closeModal);
    document.addEventListener('keydown', function(e) { if (e.key === 'Escape') closeModal(); });

    // ===== COPY BUTTON =====
    copyBtn.addEventListener('click', function() {
        var data = promptsData[currentPromptId];
        if (data) {
            navigator.clipboard.writeText(data.prompt).then(function() {
                copyBtn.textContent = 'Copiado!';
                copyBtn.classList.add('copied');
                setTimeout(function() {
                    copyBtn.textContent = 'Copiar Prompt';
                    copyBtn.classList.remove('copied');
                }, 2000);
            }).catch(function(err) {
                console.error('Failed to copy:', err);
            });
        }
    });

    // ===== CHECK IF ALREADY UNLOCKED =====
    if (localStorage.getItem('biblioteca_unlocked') === 'true') {
        var savedEmail = localStorage.getItem('biblioteca_email');
        if (savedEmail) emailInput.value = savedEmail;
    }
    </script>
</body>
</html>
